---
/**
 * /galeries/:slug – Gallery detail page.
 *
 * Statically generated at build time for every gallery slug fetched from Sanity.
 * Renders: title, meta (date, medium), optional body text, and an image grid.
 *
 * If a slug has no matching document (edge case), renders a not-found message.
 */
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import { PortableText } from "astro-portabletext";
import { fetchSanity } from "@/lib/sanityFetch";
import { GALLERY_SLUGS_QUERY, GALLERY_DETAIL_QUERY } from "@/lib/sanityQueries";
import { buildSanityImageUrl, buildSanityDprSrcSet } from "@/utils/sanityImage";
import { resolveImageWithFallback } from "@/utils/imageUtils";
import {
  formatGalleryDate,
  formatGalleryYear,
  formatMediumLabels,
  type GallerySlug,
  type GalleryDetail,
  type GalleryImageItem,
} from "@/types/galleries";
import "litelight-js/css";

// ── Data fetching (on-demand SSR) ────────────────────────────────────────

const { slug } = Astro.params;

const gallery = await fetchSanity<GalleryDetail>(GALLERY_DETAIL_QUERY, { slug });

// Guard: if document not found, we still render but show a not-found state.
// (In static mode, this path should only be hit if a document was deleted after build.)
const hasData = gallery !== null;

// ── Derived values ───────────────────────────────────────────────────

const title = gallery?.title ?? "Galerie introuvable";
const date = gallery?.date ?? "";
const medium = gallery?.medium ?? [];
const body = gallery?.body ?? [];

const formattedDate = date ? formatGalleryDate(date) : "";
const mediumItems = formatMediumLabels(medium);

// Sort images by explicit order (if set), otherwise keep array order from Sanity
const rawImages: GalleryImageItem[] = gallery?.images ?? [];
const sortedImages = [...rawImages].sort((a, b) => {
  if (a.order != null && b.order != null) return a.order - b.order;
  if (a.order != null) return -1;
  if (b.order != null) return 1;
  return 0;
});

// ── Image processing helpers ─────────────────────────────────────────

const PLACEHOLDER_PATH = "@images/galleries/galleries-placeholder.jpg";

// Image grid target sizes (CSS pixels)
const gridImageWidth = 600;
const gridImageHeight = 600;

function buildImageData(item: GalleryImageItem) {
  const source = item.image ?? null;
  const alt = item.alt || `${title} — image`;
  const caption = item.caption || undefined;

  const src = buildSanityImageUrl({
    source,
    width: gridImageWidth,
    height: gridImageHeight,
    quality: 80,
    format: "webp",
    fit: "crop",
  });

  const srcSet = buildSanityDprSrcSet({
    source,
    width: gridImageWidth,
    height: gridImageHeight,
    dprs: [1, 1.5, 2],
    quality: 80,
    format: "webp",
    fit: "crop",
  });

  // Full-resolution URL for the lightbox — no crop, preserves aspect ratio.
  // Falls back to the thumbnail src if source is unavailable.
  const fullSrc =
    buildSanityImageUrl({
      source,
      width: 1600,
      quality: 90,
      format: "webp",
      fit: "max",
    }) ?? src;

  const hasSanityImage = !!src;
  const placeholder = !hasSanityImage
    ? resolveImageWithFallback(PLACEHOLDER_PATH, PLACEHOLDER_PATH)
    : null;

  return { src, srcSet, alt, caption, hasSanityImage, placeholder, fullSrc };
}
---

<BaseLayout>
  {
    hasData ? (
      <article class="gallery-detail bg-background text-primary">
        <div class="site-container">
          {/* ── Header ──────────────────────────────────────────────── */}
          <header class="gallery-detail__header">
            <div class="gallery-detail__meta">
              <Icon name="tabler/square" aria-hidden="true" />
              {formattedDate && (
                <span class="gallery-detail__meta-item">
                  <time datetime={date}>{formattedDate}</time>
                </span>
              )}
              {mediumItems.length > 0 && (
                <span class="gallery-card__medium">
                  {mediumItems.map((item, i) => (
                    <>
                      {i > 0 && ""}
                      <span class="gallery-medium px-2 bg-accent">{item.label}</span>
                    </>
                  ))}
                </span>
              )}
            </div>

            <h1 class="gallery-detail__title">{title}</h1>
          </header>

          {/* ── Body / description ──────────────────────────────────── */}
          {body && body.length > 0 && (
            <div class="gallery-detail__body">
              <PortableText value={body as any} />
            </div>
          )}

          {/* ── Image grid ─────────────────────────────────────────── */}
          {sortedImages.length > 0 ? (
            <div class="gallery-detail__grid" role="list">
              {sortedImages.map((item) => {
                const img = buildImageData(item);
                return (
                  <figure class="gallery-detail__figure" role="listitem">
                    <div class="gallery-detail__image-wrapper">
                      {img.hasSanityImage ? (
                        <img
                          src={img.src!}
                          srcset={img.srcSet ?? undefined}
                          sizes={`(max-width: 640px) 100vw, (max-width: 1024px) 50vw, ${gridImageWidth}px`}
                          width={gridImageWidth}
                          height={gridImageHeight}
                          alt={img.alt}
                          class="gallery-detail__image"
                          loading="lazy"
                          decoding="async"
                          data-lightbox={img.fullSrc ?? img.src}
                          data-caption={img.caption ?? ""}
                        />
                      ) : img.placeholder ? (
                        <Image
                          src={img.placeholder}
                          alt={img.alt}
                          width={gridImageWidth}
                          height={gridImageHeight}
                          densities={[1, 1.5, 2]}
                          class="gallery-detail__image"
                          loading="lazy"
                          decoding="async"
                          data-lightbox={img.src ?? PLACEHOLDER_PATH}
                          data-caption={img.caption ?? ""}
                        />
                      ) : (
                        <div class="gallery-detail__placeholder" aria-hidden="true">
                          <span>Image non disponible</span>
                        </div>
                      )}
                    </div>
                    {img.caption && (
                      <figcaption class="gallery-detail__caption">{img.caption}</figcaption>
                    )}
                  </figure>
                );
              })}
            </div>
          ) : (
            <div class="gallery-detail__empty-images">
              <p>Aucune image dans cette galerie.</p>
            </div>
          )}
        </div>
      </article>
    ) : (
      /* ── Not found state ──────────────────────────────────────────── */
      <section class="gallery-not-found bg-background text-primaryForeground">
        <div class="site-container">
          <div class="gallery-not-found__content">
            <h1 class="gallery-not-found__title">Galerie introuvable</h1>
            <p class="gallery-not-found__text">
              La galerie demandée n'existe pas ou a été supprimée.
            </p>
            <a href="/galeries" class="gallery-not-found__link">
              <Icon name="tabler/square" aria-hidden="true" />
              <span>Retour aux galeries</span>
            </a>
          </div>
        </div>
      </section>
    )
  }
</BaseLayout>

<script>
  import { init } from "litelight-js";
  init();
</script>

<style>
  /* ── Detail layout ─────────────────────────────────────────────── */

  .gallery-detail {
    padding-top: 2rem;
    padding-bottom: 4rem;
  }

  /* ── Header ────────────────────────────────────────────────────── */

  .gallery-detail__header {
    display: flex;
    flex-direction: column;
    row-gap: 1.875rem;
    padding-top: 2rem;
  }

  .gallery-detail__back {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.875rem;
    text-decoration: none;
    color: inherit;
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .gallery-detail__back:hover {
    opacity: 1;
  }

  .gallery-detail__back :global(svg) {
    width: 1rem;
    height: 1rem;
  }

  .gallery-detail__title {
    font-size: 2rem;
    font-weight: 600;
    line-height: 1.2;
    margin: 0 0 0.75rem;
  }

  @media (min-width: 768px) {
    .gallery-detail__title {
      font-size: 2.5rem;
    }
  }

  .gallery-detail__meta {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.8rem;
    font-size: 0.875rem;
    text-transform: capitalize;
    letter-spacing: 0.03em;
  }
  .gallery-detail__meta-item {
    opacity: 0.7;
  }
  .gallery-detail__meta-item:not(:first-child)::before {
    margin-right: 0.5rem;
  }

  .gallery-detail__meta-year {
    font-variant-numeric: tabular-nums;
  }

  /* ── Body ──────────────────────────────────────────────────────── */

  .gallery-detail__body {
    margin-bottom: 2.5rem;
    line-height: 1.7;
  }

  .gallery-detail__body :global(p) {
    margin: 0 0 1em;
    font-size: clamp(1.0625rem, 0.98rem + 0.35vw, 1.331rem);
    leading: 1.6;
  }

  .gallery-detail__body :global(p:last-child) {
    margin-bottom: 0;
  }

  /* ── Image grid ────────────────────────────────────────────────── */

  .gallery-detail__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .gallery-detail__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.25rem;
    }
  }

  @media (min-width: 1024px) {
    .gallery-detail__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
    }
  }

  @media (min-width: 1440px) {
    .gallery-detail__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .gallery-detail__figure {
    margin: 0;
  }

  .gallery-detail__image-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    background-color: var(--color-muted, #f0f0f0);
  }

  .gallery-detail__image {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    cursor: pointer;
    transition: transform 0.4s ease;
  }

  .gallery-detail__figure:hover .gallery-detail__image {
    transform: scale(1.03);
  }

  .gallery-detail__placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    min-height: 12rem;
    color: var(--color-muted-foreground, #999);
    font-size: 0.875rem;
  }

  .gallery-detail__caption {
    margin-top: 0.5rem;
    font-size: 0.8125rem;
    opacity: 0.7;
    line-height: 1.4;
  }

  .gallery-detail__empty-images {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: 12rem;
    padding: 2rem 1rem;
    border: 1px dashed currentColor;
    border-radius: 0.5rem;
    opacity: 0.5;
  }

  /* ── Not found ─────────────────────────────────────────────────── */

  .gallery-not-found {
    padding-top: 4rem;
    padding-bottom: 4rem;
  }

  .gallery-not-found__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: 24rem;
  }

  .gallery-not-found__title {
    font-size: 2rem;
    font-weight: 600;
    margin: 0 0 0.75rem;
  }

  .gallery-not-found__text {
    margin: 0 0 2rem;
    font-size: 1rem;
    opacity: 0.7;
  }

  .gallery-not-found__link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.9375rem;
    text-decoration: none;
    color: inherit;
    padding: 0.625rem 1.25rem;
    border: 1px solid currentColor;
    border-radius: 0.25rem;
    transition:
      background-color 0.2s ease,
      opacity 0.2s ease;
  }

  .gallery-not-found__link:hover {
    opacity: 0.8;
  }

  .gallery-not-found__link :global(svg) {
    width: 1rem;
    height: 1rem;
  }
</style>
