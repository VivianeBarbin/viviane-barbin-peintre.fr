---
import { getSiteSettings, themeConfig } from "@config/site.ts";

// SSR/build-time: resolve from Sanity singleton with TS fallback.
// If Sanity is empty/unreachable, `getSiteSettings()` returns fallback values.
const siteSettings = await getSiteSettings();

const siteTitle = siteSettings.title || themeConfig.site.title;
const [firstName, lastName] = siteTitle.split(/\s+/);
---

<a class="text-foreground focus-ring flex items-center rounded py-2 pr-2 lg:pr-4" href="/">
  <p class="logo-text">
    <span class="text-primary">{firstName}</span>
    <span class="text-secondary">{lastName}</span>
  </p>
</a>
