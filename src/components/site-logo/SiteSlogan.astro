---
import { themeConfig } from "@config/site.ts";

const siteSlogan = themeConfig.site.slogan;
---

<div class="flex flex-col items-center justify-center">
    <!-- <span class="slogan-text text-primary leading-none">{siteSlogan}</span> -->
    <svg
        class="flex items-center justify-center"
        viewBox="0 0 1540 200"
        width="100%"
        height="auto"
        preserveAspectRatio="xMidYMid meet"
    >
        <text
            x="50%"
            y="50%"
            text-anchor="middle"
            dominant-baseline="middle"
            class="slogan-svg fill-primary"
        >
            {siteSlogan}</text
        >
    </svg>
</div>

<style>
    svg {
        width: 100%;
    }
</style>
