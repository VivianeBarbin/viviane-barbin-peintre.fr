{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Preserve",
    "moduleDetection": "force",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    ".astro/types.d.ts",
    "sanity.config.ts",
    "**/*.ts", 
    "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
