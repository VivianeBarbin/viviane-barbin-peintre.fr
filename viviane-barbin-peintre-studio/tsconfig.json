{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Preserve",
    "moduleDetection": "force",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "sanity.config.ts",
    "sanity.cli.ts",
    "src/**/*",
    "schemas/**/*",
    "plugins/**/*",
    "types/**/*",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".astro",
    ".sanity",
    ".cache",
    ".turbo",
    ".vercel",
    ".netlify",
    "coverage"
  ]
}