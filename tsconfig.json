{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "types": ["astro/client"],
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["config/*"]
    },
    "allowJs": true
  },
  "include": [
    ".astro/types.d.ts",
    "src/**/*",
    "scripts/**/*",
    "astro.config.mjs",
    "uno.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    ".astro",
    ".sanity",
    "viviane-barbin-peintre-studio"
  ]
}